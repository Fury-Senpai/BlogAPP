<header class="fixed top-0 left-0 w-full bg-gray-800 text-white shadow-md z-50">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">

    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 text-white font-bold text-xl hover:text-gray-300">
      <img src="/images/dev-shade-logo-removebg.png" alt="DevShade Logo" class="h-8 w-8 object-contain">
      <span>DevShade</span>
    </a>

    <!-- Hamburger Menu -->
    <button id="menu-btn" class="md:hidden text-white text-2xl focus:outline-none">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Menu Content -->
    <div id="menu" class="hidden md:flex flex-col md:flex-row md:items-center gap-4 w-full md:w-auto absolute md:static top-full left-0 md:top-auto md:left-auto bg-gray-800 md:bg-transparent px-4 md:px-0 py-4 md:py-0">

      <!-- Navigation Links -->
      <nav class="flex flex-col md:flex-row gap-4 text-sm md:text-base justify-center">
        <a href="/" class="hover:text-gray-300 transition">Home</a>
        <a href="/about" class="hover:text-gray-300 transition">About Me</a>
        <a href="/contact" class="hover:text-gray-300 transition">Contact Me</a>
      </nav>

      <!-- Search & Logout -->
      <div class="flex flex-col md:flex-row md:items-center gap-4 md:ml-4 w-full md:w-auto">
        
        <!-- Search Bar -->
        <form action="/search" method="post" class="relative w-full md:w-auto">
          <input 
            type="search" 
            name="query" 
            placeholder="Search..." 
            class="rounded-full px-4 py-1 text-black w-full md:w-48 focus:outline-none"
          >
          <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
            <i class="fas fa-search"></i>
          </button>
        </form>

        <!-- Logout Button -->
        <form action="/logout" method="POST">
          <input 
            type="submit" 
            value="Logout"
            class="bg-red-600 hover:bg-red-700 text-white px-4 py-1 rounded-full text-sm transition"
          />
        </form>
      </div>
    </div>
  </div>

  <!-- Toggle Script -->
  <script>
    const menuBtn = document.getElementById('menu-btn');
    const menu = document.getElementById('menu');

    menuBtn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</header>
