<div class="pt-12 min-h-full bg-gray-100 p-6">
  <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Admin Dashboard</h1>

    <!--  Create New Post Form -->
    <form action="/createPost" method="POST" class="mb-10">
      <h2 class="text-xl font-semibold text-gray-700 mb-2">Create a New Post</h2>
      
      <input 
        type="text" 
        name="title" 
        placeholder="Enter title..." 
        required
        class="w-full border border-gray-300 rounded px-4 py-2 mb-4 focus:outline-none"
      >
      
      <textarea 
        name="content" 
        rows="6" 
        placeholder="Write your content..." 
        required
        class="w-full border border-gray-300 rounded px-4 py-2 mb-4 focus:outline-none"
      ></textarea>

      <button 
        type="submit" 
        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition"
      >Create Post</button>
    </form>

    <!-- Existing Posts -->
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Your Posts</h2>
    
    <div class="space-y-4">
      <% if (post && post.length > 0) { %>
        <% post.forEach(post => { %>
          <div class="border p-4 rounded shadow-sm">
            <h3 class="text-lg font-bold text-gray-800 mb-1"><%= post.title %></h3>
            <p class="text-gray-600 text-sm mb-3"><%= post.content.substring(0, 100) %>...</p>

            <div class="flex gap-4 text-sm">
              <a href="/admin/edit/<%= post._id %>" class="text-blue-600 hover:underline">Edit</a>
              <a href="/admin/delete/<%= post._id %>" class="text-red-600 hover:underline" onclick="return confirm('Delete this post?')">Delete</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500">You haven't created any posts yet.</p>
      <% } %>
    </div>
  </div>
</div>
