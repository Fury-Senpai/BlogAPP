<header class="fixed top-0 z-50 bg-gray-800 text-white px-4 py-4 w-full shadow-md">
  <div class="max-w-7xl mx-auto flex flex-wrap md:flex-nowrap items-center justify-between gap-4">

    <!-- Logo & Title -->
    <a href="/" class="flex items-center gap-2 text-white font-bold text-xl hover:text-gray-300">
      <img src="/images/dev-shade-logo-removebg.png" alt="DevShade Logo" class="h-8 w-8 object-contain"> 
      <span>DevShade</span>
    </a>

    <!-- Hamburger Button (Mobile) -->
    <button id="menuToggle" class="md:hidden text-white text-2xl focus:outline-none">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Navigation + Right Section (Wrapped in one) -->
    <div id="navMenu" class="w-full md:w-auto hidden md:flex flex-col md:flex-row md:items-center md:justify-between gap-4 md:gap-6 mt-4 md:mt-0">

      <!-- Navigation Links -->
      <nav class="flex flex-col md:flex-row gap-4 md:gap-6 text-sm md:text-base justify-center">
        <a href="/" class="hover:text-gray-300 transition">Home</a>
        <a href="/about" class="hover:text-gray-300 transition">About Me</a>
        <a href="/contact" class="hover:text-gray-300 transition">Contact Us</a>
      </nav>

      <!-- Search + Admin -->
      <div class="flex flex-col md:flex-row items-start md:items-center gap-4 w-full md:w-auto justify-end">

        <!-- Search Bar -->
        <form action="/search" method="post" role="search" class="relative w-full md:w-auto">
          <input 
            type="search" 
            name="query" 
            placeholder="Search..." 
            aria-label="Search"
            class="rounded-full px-4 py-1 text-black focus:outline-none w-full md:w-48"
          >
          <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
            <i class="fas fa-search"></i>
          </button>
        </form>

        <!-- Admin Actions -->
        <div class="flex gap-2">
          <a href="/panel" class="text-sm bg-yellow-500 hover:bg-yellow-600 px-3 py-1 rounded text-white">Dashboard</a>
          <form action="/logout" method="POST">
            <button type="submit" class="text-sm border border-white hover:bg-white hover:text-gray-800 px-3 py-1 rounded">Logout</button>
          </form>
        </div>

      </div>
    </div>
  </div>
</header>

<!-- Toggle Script -->
<script>
  const toggleBtn = document.getElementById("menuToggle");
  const navMenu = document.getElementById("navMenu");

  toggleBtn.addEventListener("click", () => {
    navMenu.classList.toggle("hidden");
  });
</script>
