
<!-- Single Post Page -->
<div class="max-w-4xl mx-auto px-4 py-10 ">
  <article class="bg-zinc-100  shadow-md rounded-lg p-6">\
    <!-- Title -->
    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 text-center">
        <%= post.title %>
    </h1>
    <!-- Content -->
    <p class="text-base text-justify text-gray-700 leading-relaxed whitespace-pre-line">
      <%= post.content %>
    </p>
  </article>
</div>


