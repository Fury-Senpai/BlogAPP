<header class="fixed top-0 z-50 bg-gray-800 text-white px-4 py-4 w-full shadow-md">
  <div class="max-w-7xl mx-auto flex flex-wrap items-center justify-between gap-4">

    <!-- Logo & Title -->
    <a href="/" class="flex items-center gap-2 text-white font-bold text-xl hover:text-gray-300">
      <img src="/images/dev-shade-logo-removebg.png" alt="DevShade Logo" class="h-8 w-8 object-contain"> 
      <span>DevShade</span>
    </a>

    <!-- Hamburger Button -->
    <button id="menu-btn" class="md:hidden text-white text-2xl focus:outline-none">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Desktop Menu -->
    <div class="hidden md:flex gap-4 md:gap-6 items-center">
      <!-- Navigation -->
      <nav class="flex gap-4 text-sm md:text-base">
        <a href="/" class="hover:text-gray-300 transition">Home</a>
        <a href="/about" class="hover:text-gray-300 transition">About Me</a>
        <a href="/contact" class="hover:text-gray-300 transition">Contact Us</a>
      </nav>

      <!-- Search + Auth -->
      <div class="flex gap-4 items-center">
        <!-- Search -->
        <form action="/search" method="post" role="search" class="relative">
          <input 
            type="search" 
            name="query" 
            placeholder="Search..." 
            aria-label="Search"
            class="rounded-full px-4 py-1 text-black focus:outline-none w-48"
          >
          <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
            <i class="fas fa-search"></i>
          </button>
        </form>

        <!-- Auth -->
        <div class="flex gap-2">
          <a href="/login" class="text-sm bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded text-white">Login</a>
          <a href="/signup" class="text-sm border border-white hover:bg-white hover:text-gray-800 px-3 py-1 rounded">Signup</a>
        </div>
      </div>
    </div>

    <!-- Mobile Menu (hidden by default, toggled with JS) -->
    <div id="mobile-menu" class="w-full flex-col gap-4 mt-4 hidden md:hidden">
      <nav class="flex flex-col gap-2 text-sm">
        <a href="/" class="hover:text-gray-300 transition">Home</a>
        <a href="/about" class="hover:text-gray-300 transition">About Me</a>
        <a href="/contact" class="hover:text-gray-300 transition">Contact Us</a>
      </nav>

      <form action="/search" method="post" role="search" class="relative mt-2">
        <input 
          type="search" 
          name="query" 
          placeholder="Search..." 
          aria-label="Search"
          class="rounded-full px-4 py-1 text-black focus:outline-none w-full"
        >
        <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
          <i class="fas fa-search"></i>
        </button>
      </form>

      <div class="flex gap-2 mt-2">
        <a href="/login" class="text-sm bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded text-white">Login</a>
        <a href="/signup" class="text-sm border border-white hover:bg-white hover:text-gray-800 px-3 py-1 rounded">Signup</a>
      </div>
    </div>

  </div>
  <script>
    const btn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    btn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>

</header>
