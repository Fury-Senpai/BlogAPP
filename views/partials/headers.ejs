<header class="fixed top-0 z-50 bg-gray-800 text-white px-4 py-4 w-full overflow-y-hidden shadow-md z-50">
  <div class="max-w-7xl mx-auto flex flex-wrap md:flex-nowrap items-center justify-between gap-4">
    
    <!-- Logo & Title -->
    <a href="/" class="flex items-center gap-2 text-white font-bold text-xl hover:text-gray-300">
      <img src="/images/dev-shade-logo-removebg.png" alt="DevShade Logo" class="h-8 w-8 object-contain"> 
      <span>DevShade</span>
    </a>

    <!-- Navigation Links -->
    <nav class="flex flex-wrap gap-4 md:gap-6 text-sm md:text-base justify-center w-full md:w-auto">
      <a href="/" class="hover:text-gray-300 transition">Home</a>
      <a href="/about" class="hover:text-gray-300 transition">About Us</a>
      <a href="/contact" class="hover:text-gray-300 transition">Contact Us</a>
    </nav>

    <!-- Search Bar -->
    <form action="/search" method="post" role="search" class="relative w-full md:w-auto">
      <input 
        type="search" 
        aria-label="Search"
        id="searchInput"
        name="query" 
        placeholder="Search..." 
        class="rounded-full px-4 py-1 text-black focus:outline-none w-full md:w-48"
      >
      <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
        <i class="fas fa-search"></i>
      </button>
    </form>

  </div>
</header>
