<header class="fixed top-0 left-0 w-full bg-gray-800 text-white shadow-md z-50">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between flex-wrap gap-4">

    <!-- Logo & Title -->
    <a href="/" class="flex items-center gap-2 text-white font-bold text-xl hover:text-gray-300">
      <img src="/images/dev-shade-logo-removebg.png" alt="DevShade Logo" class="h-8 w-8 object-contain">
      <span>DevShade</span>
    </a>

    <!-- Hamburger Button -->
    <button id="menu-btn" class="md:hidden text-white text-2xl focus:outline-none">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Main Menu -->
    <div id="menu" class="w-full md:flex hidden flex-col md:flex-row gap-4 md:items-center justify-between md:justify-end">

      <!-- Navigation Links -->
      <nav class="flex flex-wrap justify-center md:justify-start gap-4 text-sm md:text-base">
        <a href="/" class="hover:text-gray-300 transition">Home</a>
        <a href="/about" class="hover:text-gray-300 transition">About Us</a>
        <a href="/contact" class="hover:text-gray-300 transition">Contact Us</a>
      </nav>

      <!-- Search + Logout -->
      <div class="flex flex-col md:flex-row items-start md:items-center gap-4 w-full md:w-auto">

        <!-- Search Bar -->
        <form action="/search" method="post" role="search" class="relative w-full md:w-auto">
          <input 
            type="search" 
            name="query" 
            placeholder="Search..." 
            aria-label="Search"
            class="rounded-full px-4 py-1 text-black focus:outline-none w-full md:w-48"
          >
          <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
            <i class="fas fa-search"></i>
          </button>
        </form>

        <!-- Logout Button -->
        <div class="flex justify-end w-full md:w-auto">
          <form action="/logout" method="POST">
            <input 
              type="submit" 
              value="Logout"
              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-full text-sm md:text-base transition"
            />
          </form>
        </div>

      </div>
    </div>
  </div>
  <script>
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("menu");

    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  </script>

</header>
